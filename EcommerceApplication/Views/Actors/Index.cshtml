@*Define Model*@
@model IEnumerable<Actor>

@*Define View Data*@
@{
    ViewData["Title"] = "List of Actors";
}
<div class="row">
    <div class="col-mf-8 offset-md-2">

        <table class="table">
            <thead>
                <tr>
                    <th class="align-middle">@Html.DisplayNameFor(model => model.ProfilePictureUrl)</th>
                    <th class="align-middle">@Html.DisplayNameFor(model => model.FullName)</th>
                    <th class="align-middle">@Html.DisplayNameFor(model => model.Bio)</th>
                    <th class="align-middle">Actions</th>
                </tr>                
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.ProfilePictureUrl" alt="@item.FullName" style="max-width : 150px; max-height: 150px; aspect-ratio:auto"/>
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelitem => item.FullName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelitem => item.Bio)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id" ><i class="bi bi-pencil-square"></i>  Edit</a>
                            <a class="btn btn-outline-info" asp-controller="Actors" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i>  Details</a>
                            <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.Id" ><i class="bi bi-trash"></i>  Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="text-white" style="position: fixed; right: 25px; bottom: 25px;">
    <a asp-controller="Actors" asp-action="Create" class="btn btn-success">
    <i class="bi bi-plus-circle"></i> Add New </a>
</div>